@{
    ViewData["Title"] = "Tasks";
}
   
   @section Styles {
   <link href="/css/app.css" rel="stylesheet">
   }

    @section Scripts {
   <script src="/js/task.js"></script>
   <script src="/js/app.js"></script>
   }

    <section id="list">
                <h2>Your Tasks</h2>

                <button id = "btnDetails" class="btn btn-sm btn-dark">Show/Hide Form</button>

                <div id="tasks-list">

                </div>
                
        

                
            </section>

            <section id = "capture">
                <form class="capture-form">

                <div class="control">
                    <label for="">Id:</label>
                    <input type="text" readonly class="form-control">
                </div>

                <div class="control">
                        <label for="">Title:</label>
                        <input id="txtTitle" type="text" class="form-control">
                </div>
                <div class="control">
                    <label for="">Is it important:</label>
                    <i  id="iImportant" class="far fa-star" id="important"></i>
                                        
                </div>


                <div class="control">
                    <label for="">Date / Time:</label>
                    <input id="txtDate" type="datetime-local" class="form-control">
            </div>

            <div class="control">
                <label for="">Status:</label>
                <select id="selStatus" class="form-control">
                    <option>--- select status ---</option>
                    <option >Pending</option>
                    <option >In Progress</option>
                    <option >Blocked</option>
                    <option >Removed</option>
                    <option >Done</option>
                </select>

            
        <div class="control">
            <label for="">Location:</label>
            <input id="txtLocation" type="text" class="form-control">
    </div>

    <div class="control">
        <label for="">Color:</label>
        <input id="txtColor" type="color" class="form-control">
    </div>

    <div class="control">
    <label for="">Description:</label>
    <input id="txtDesc" type="text" class="form-control">
    </div>

        <div class="control">
            <button id=btnSave type="button" class="btn btn-primary">Save Task</button>
        </div>
      
    </main>
    </form>


            </section>
